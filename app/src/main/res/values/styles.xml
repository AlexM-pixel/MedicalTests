<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A7FFEB</item>
        <item name="colorPrimaryDark">#82ADA9</item>
        <item name="colorAccent">#b2ebf2</item>
        <item name="android:textColorPrimary">#0097A7</item>
    </style>
    <style name="MyNoTitleActivity"
        parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTitleText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="TextDescription" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MyButtons"
        parent="AppTheme">
        <item name="colorButtonNormal">#b2ebf2</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
